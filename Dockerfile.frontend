# Frontend Dockerfile
FROM node:20-alpine AS builder

WORKDIR /app

# 依存関係をインストール
COPY frontend/package*.json ./
RUN npm ci

# ソースコードをコピー
COPY frontend/ ./

# 環境変数を設定（ビルド時に必要）
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# ビルド
RUN npm run build

# 本番環境用イメージ（Nginx）
FROM nginx:alpine

# ビルド済みファイルをコピー
COPY --from=builder /app/dist /usr/share/nginx/html

# Nginx設定ファイルをコピー
COPY nginx.conf /etc/nginx/conf.d/default.conf

# ポートを公開
EXPOSE 80

# Nginxを起動
CMD ["nginx", "-g", "daemon off;"]
